<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oes.eduauthentication.model.dao.RolesDao">

    <resultMap type="com.oes.eduauthentication.model.entity.Role" id="RolesMap">
        <id property="roleid" column="roleid" jdbcType="TINYINT" />
        <result property="roleName" column="role_name" jdbcType="VARCHAR" />
        <result property="roleTableName" column="role_table_name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        roleid, role_name, role_table_name
    </sql>

    <select id="selectBatch" resultMap="RolesMap">
        select
            <include refid="Base_Column_List"/>
        from roles
        where roleid in
        <foreach collection="roleids" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </select>

</mapper>